<MainScreen>

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            text: "Summarizing text app"
            font_size: 100
            bold: True
            color: 0, 0, 0, 0.5
            pos_hint:{"center_x":0.2,"center_y":0.5}
        Label:
            text: "Provide text"
            color: 0, 0, 0, 0.5
            font_size: 70
            italic: True
            pos_hint:{"center_x":0.1,"center_y":0.5}
        TextInput:
            text: "This is input"
            font_size: 50
            italic: True
            width: 100
            height: 100
            multiline:False
        Button:
            text: 'Summarize'
            size_hint: (.4, .4)
            pos_hint:{"center_x":0.5,"center_y":0.5}
            background_color: (56/255, 125/255, 240/255, 1)
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'output'



<OutputScreen>

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: "Output Screen"
            font_size: 100
            bold: True
            color: 0,0,0,0.5
            pos_hint:{"center_x":0.2,"center_y":0.5}   

        Button:
            text: 'Go Back'
            size_hint: (.4, .4)
            pos_hint:{"center_x":0.5,"center_y":0.5}
            background_color: (56/255, 125/255, 240/255, 1)
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'main' 